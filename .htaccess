# BPM Formation - Configuration Apache pour Hostinger
# Active la réécriture d'URL
RewriteEngine On

# Forcer HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Rediriger les requêtes API vers le serveur Node.js (port 3000)
RewriteCond %{REQUEST_URI} ^/create-checkout-session [OR]
RewriteCond %{REQUEST_URI} ^/send-email [OR]
RewriteCond %{REQUEST_URI} ^/payment-status
RewriteRule ^(.*)$ http://localhost:3000/$1 [P,L]

# Servir index.html pour les routes non trouvées (SPA behavior)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/create-checkout-session
RewriteCond %{REQUEST_URI} !^/send-email
RewriteCond %{REQUEST_URI} !^/payment-status
RewriteRule ^(.*)$ index.html [L]

# Compression GZIP pour de meilleures performances
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache des fichiers statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
</IfModule>

# Sécurité supplémentaire
<IfModule mod_headers.c>
    # Protection XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # Empêcher le sniffing MIME
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Content Security Policy
    Header set Content-Security-Policy "default-src 'self' https: 'unsafe-inline' 'unsafe-eval'; img-src 'self' https: data:;"
</IfModule>
